<div class="container">
  <h1><%= @list.name %></h1>

  <div class="card-movie">
    <% @list.movies.each do |movie| %>
      <li>
        <img src="<%= movie.poster_url %>" alt="">
        <%= "#{movie.title} --- #{movie.overview} --- #{movie.rating}" %>
      </li>
    <% end %>
    </ul>
  </div>

  <div class="card-bookmark">
    <ul>
    <% @list.bookmarks.each do |bookmark| %>
      <li>
        <%= "#{bookmark.movie.title} --- #{bookmark.comment}" %>
        <%= link_to "Delete this bookmark", bookmark_path(bookmark), method: :delete %>
      </li>
    <% end %>
    </ul>
  </div>

  <ul>
    <li>
      <%= link_to "Back to lists", lists_path %>
    </li>
    <li>
      <%= link_to "Create new bookmark", new_list_bookmark_path(@list) %>
    </li>
  </ul>
</div>
