<div class="container">
  <h1><%= @list.name %></h1>

  <div class="card-movie">
    <% @list.bookmarks.each do |bookmark| %>
      <li>
      <img src="<%= bookmark.movie.poster_url %>">
        <%= "Title: #{bookmark.movie.title}" %>
        <%= "Rating #{bookmark.movie.rating}" %>
        <%= "Overview: #{bookmark.movie.overview}" %>
        <%= "Comment: #{bookmark.comment}" %>
        <%= link_to "Delete this bookmark", bookmark_path(bookmark), method: :delete %>
        <% end %>
      </li>
    </ul>
  </div>


  <ul>
    <li>
      <%= link_to "Back to lists", lists_path %>
    </li>
    <li>
      <%= link_to "Create new bookmark", new_list_bookmark_path(@list) %>
    </li>
  </ul>
</div>
