<div class="container">
  <h1><%= @list.name %></h1>

  </div>
  <div class="card-trip">
  <% @list.bookmarks.each do |bookmark| %>
  <img src="<%= bookmark.movie.poster_url %>" />
  <div class="card-trip-infos">
    <div>
      <h2><%= bookmark.movie.title %></h2>
      <p><%= bookmark.movie.overview %></p>
    </div>
    <h2 class="card-trip-pricing"><%= bookmark.movie.rating %></h2>
    <%= link_to "Delete this bookmark", bookmark_path(bookmark), method: :delete %>
    <% end %>
  </div>
</div>


  <ul>
    <li>
      <%= link_to "Back to lists", lists_path %>
    </li>
    <li>
      <%= link_to "Create new bookmark", new_list_bookmark_path(@list) %>
    </li>
  </ul>
</div>
