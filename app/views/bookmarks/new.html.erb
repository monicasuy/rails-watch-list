<h1>Create a new bookmark</h1>

<%= simple_form_for [ @list, @bookmark ] do |f| %>
  <%= f.input :comment %>
  <%= f.association :movie %>
  <%= f.submit "Submit bookmark", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back to lists", lists_path %>
<%= link_to "Back to #{@list.name} list", list_path(@list) %>
